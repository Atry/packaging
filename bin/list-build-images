set -e

function dump_builds() {
  IMAGE_NAME=$(
    aws ecr describe-repositories \
      --repository-name "$1" \
      --query 'repositories[*].repositoryUri' \
      --output text
  )
  TAGS=$(
    aws ecr list-images \
      --repository-name "$1" \
      --query 'imageIds[*].[imageTag]' \
      --output text
  )
  for TAG in $TAGS; do
    echo "- ${IMAGE_NAME}:${TAG}"
  done
}

echo "Failed builds:"

dump_builds hhvm-failed-builds

echo "Succeeded builds:"

dump_builds hhvm-succeeded-builds
