set -e

STREAM="$1"

if [ -z "${STREAM}" ]; then
  echo "Usage: $0 LOG_NAME [LIMIT]"
  exit 1
fi
LIMIT="${2:-100}"

aws logs get-log-events \
  --log-group-name hhvm-binary-package-builds/cloud-init-output.log \
  --log-stream-name "${STREAM}" \
  --output text --query 'events[*].[message]' \
  --no-start-from-head --limit "${LIMIT}"
